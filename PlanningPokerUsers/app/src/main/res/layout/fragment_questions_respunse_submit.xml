<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsRespunseSubmitFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/tv_question" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_nr1"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp" />
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_nr2"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp" />
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_nr3"
                android:layout_width="50dp"
                android:layout_height="100dp"
            android:layout_marginLeft="16dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_nr4"                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_nr5"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginLeft="85dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_nr6"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp" />
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_nr7"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/bt_Submit" />

    </LinearLayout>
</FrameLayout>